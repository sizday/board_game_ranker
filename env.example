# ============================================
# Board Game Ranker Configuration
# ============================================

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_ID=123456789

# API Configuration
API_BASE_URL=http://backend:8000

# Google Sheets Configuration
RATING_SHEET_CSV_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/pub?gid=YOUR_GID&single=true&output=csv

# Database Configuration
DATABASE_URL=postgresql+psycopg2://board_user:board_password@db:5432/board_games

# Individual DB settings (for DBeaver/other tools)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=board_games
DB_USER=board_user
DB_PASSWORD=board_password

# Application Environment
APP_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Bot Settings
POLLING=true
WEBHOOK=false
WEBHOOK_URL=
WEBHOOK_PATH=/webhook

# Debug Settings
DEBUG=false
LOG_LEVEL=INFO

# Timeouts
REQUEST_TIMEOUT=30
CONNECT_TIMEOUT=10

# Testing
TESTING=false

# BGG API
BGG_BEARER_TOKEN=your_bgg_bearer_token_here

# Game update settings
# Number of days after which game data is considered stale
# and can be refreshed from BGG during import-table.
GAME_UPDATE_DAYS=30